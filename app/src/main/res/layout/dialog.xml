<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="340dp"
            android:layout_height="280dp"
            android:background="@drawable/border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_dialog1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="Oyun Bitti Kazanan TakÄ±m"
            android:textColor="#ff000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout2"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2" />

        <TextView
            android:id="@+id/txt_winnerTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="TEXT"
            android:textColor="@color/colorYellow"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_dialog1"
            app:layout_constraintStart_toStartOf="@+id/txt_dialog1"
            app:layout_constraintTop_toBottomOf="@+id/txt_dialog1" />

        <TextView
            android:id="@+id/txt_dialog2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="Tebrikler"
            android:textColor="#ff000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_winnerTeam"
            app:layout_constraintStart_toStartOf="@+id/txt_winnerTeam"
            app:layout_constraintTop_toBottomOf="@+id/txt_winnerTeam" />

        <Button
            android:id="@+id/btn_dialog"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/roundcorner"
            android:gravity="center_vertical|center_horizontal"
            android:text="Kapat"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
            app:layout_constraintEnd_toEndOf="@+id/txt_dialog2"
            app:layout_constraintStart_toStartOf="@+id/txt_dialog2"
            app:layout_constraintTop_toBottomOf="@+id/txt_dialog2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>